{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Album example</h1>
            <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don't simply skip over it entirely.</p>
            <p>
                <a href="#" class="btn btn-primary my-2">Main call to action</a>
                <a href="#" class="btn btn-secondary my-2">Secondary action</a>
            </p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            {# Je veux afficher les livres avec une boucle for #}
            <div class="row">

                {% for book in books %}
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <img height="500px" class="card-img-top" src="{{ book.picture }}" alt="Card image cap">
                                <div class="card-body">
                                    <strong class="card-text">{{book.title}}</strong>
                                    <p class="card-text">{{book.description | slice(0,100) ~ (book.description | length > 100 ? '...' : '')}}</p>
                                  
                                    {# c'est bien ce qui est en bas aussi ça donne la mm chose #}
                                    {# <p class="card-text">
                                    {% if book.description|length > 50 %}
                                      {{ book.description|slice(0, 50) }}... <a href="#">Lire la suite</a>
                                    {% else %}
                                      {{ book.description }}
                                    {% endif %}
                                </p> #}
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="{{path('app_single_book',{id: book.id})}}" type="button" class="btn btn-sm btn-outline-secondary">Voir</a>
                                        <a href="{{path('app_edit_book',{id: book.id})}}" type="button" class="btn btn-sm btn-outline-secondary">Voir</a>

                                        </div>
                                      <small class="text-muted">{{ book.createdAt| date('d/m/y') }}</small>
                                        {# <small class="text-muted">{{ book.createdAt(Datetime()) }}</small> #}
                                    </div>
                                </div>
                            </div>
                        </div>
                {% endfor %}
        </div>
    </div>
{% endblock %}
